@model InAndOut.Models.Transaccion

    <body style="background-color: #2740B4;">
        <form method="post" asp-action="Create">
            <br />
            <div class="border p-3 border-white">
                <div class="form-group row">
                    <h2 class="offset-4 text-white pl-3" style="font-family:Candara"><b>Realizar una nueva Transacción</b></h2>
                </div>
                <div class="row">
                    <div class="col-12x">
                        <div class="form-group row offset-2">
                            <div class="col-5">
                                <label asp-for="Nombre" text-align="Center" style="font-family: Cambria; color: #62DBF2 "><b>Nombre</b></label> <!-- Queremos publicar específicamente esta información en nuestro gasto-->
                                <input asp-for="Nombre" class="form-control" style="font-family:Cambria; color:black" />
                                <span asp-validation-for="Nombre" class="text-light" style="font-family:Candara; font-size:small"></span>
                            </div>
                            <div class="col-5">
                                <label asp-for="Apellido" style="font-family: Cambria; color: #62DBF2"><b>Apellido</b></label>
                                <input asp-for="Apellido" class="form-control" style="font-family: Cambria; color: black" />
                                <span asp-validation-for="Apellido" class="text-light" style="font-family:Candara; font-size:small"></span>
                                <br />
                            </div>

                            <div class="col-5">
                                <label asp-for="Ciudad" style="font-family: Cambria; color: #62DBF2"><b>Ciudad</b></label>
                                <input asp-for="Ciudad" class="form-control" style="font-family: Cambria; color: black" />
                                <span asp-validation-for="Ciudad" class="text-light" style="font-family:Candara; font-size:small"></span>
                            </div>
                            <div class="col-5">
                                <label asp-for="Direccion" style="font-family: Cambria; color: #62DBF2"><b>Dirección</b></label>
                                <input asp-for="Direccion" class="form-control" style="font-family: Cambria; color: black" />
                                <span asp-validation-for="Direccion" class="text-light" style="font-family:Candara; font-size:small"></span>
                                <br />
                            </div>

                            <div class="col-5">
                                <label asp-for="Cedula" style="font-family: Cambria; color: #62DBF2"><b>Cédula</b></label>
                                <input asp-for="Cedula" class="form-control" style="font-family: Cambria; color: black" />
                                <span asp-validation-for="Cedula" class="text-light" style="font-family:Candara; font-size:small"></span>
                            </div>
                            <div class="col-5">
                                <label asp-for="Fecha" style="font-family: Cambria; color: #62DBF2"><b>Fecha y Hora</b></label><br />
                                <input type="datetime-local" name="Fecha" class="form-control" style="font-family: Cambria; color: black" />
                                <span asp-validation-for="Fecha" class="text-light" style="font-family:Candara; font-size:small"></span>
                            </div>

                            <div class="col-5">
                                <br />
                                <label asp-for="Valor" style="font-family: Cambria; color: #62DBF2"><b>Valor ($)</b></label>
                                <input asp-for="Valor" class="form-control" style="font-family: Cambria; color: black" />
                                <span asp-validation-for="Valor" class="text-light" style="font-family:Candara; font-size:small"></span>
                            </div>
                            <div class="col-5">
                                <br />
                                <label asp-for="Tipo" style="font-family: Cambria; color: #62DBF2"><b>Tipo de Transacción</b></label>
                                <input asp-for="Tipo" class="form-control" style="font-family: Cambria; color: black" />
                                <span asp-validation-for="Tipo" class="text-light" style="font-family:Candara; font-size:small"></span>
                            </div>
                        </div>
                        <br />
                        <div class="form-group row">
                            <div class="col-8 offset-3 row">
                                <div class="col">
                                    <input type="submit" class="btn btn-success w-50" style="font-family:Candara" value="Crear" />
                                </div>
                                <div class="col offset-1">
                                    <a asp-action="Index" class="btn btn-danger w-50" style="font-family:Candara">Regresar</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </body>

        @*Validación del lado del Client*@
        @section Scripts{
            @{<partial name="_ValidationScriptsPartial" />}
        }
