@model IEnumerable<InAndOut.Models.Item> 

 <!-- Contenedor - La página -->
<div class="container p-3">
    <div class="row pt-4"> <!-- Agregamos fila -->
        <div class="col-6"> <!-- Agregamos columna -->
            <h2 class="text-primary">Borrowed Items List</h2> <!-- Color azul text-primary -->
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Item" asp-action="Create" class="btn btn-success">Create new Item</a> <!-- Creamos el botón que nos permite crear Items - asignar path -->
        </div>
    </div>
    <br />

    @if(Model.Count()>0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Item Name
                    </th>
                    <th>
                        Borrower
                    </th>
                    <th>
                        Lender
                    </th>
                </tr> 
            </thead>  
            <tbody>
                <!-- Create a table row -->
                @foreach (var item in Model)
                {
                <tr>
                    <td width="30%">@item.ItemName</td>
                    <td width="30%">@item.Borrower</td>
                    <td width="30%">@item.Lender</td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No items created yet</p>
    }
</div>


