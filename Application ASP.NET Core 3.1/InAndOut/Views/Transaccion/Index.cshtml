@model IEnumerable<InAndOut.Models.Transaccion> 

 <!-- Contenedor - La página -->
<body style="background-color: #29A0CD;">
    <div class="container p-3">
        <div class="row pt-4">
            <!-- Agregamos fila -->
            <div class="col-6">
                <!-- Agregamos columna -->
                <h2 style="font-family: Candara; color: #130D70 "><b>Historial de Transacciones</b></h2> <!-- Color azul text-primary -->
            </div>
            <div class="col-6 text-right">
                <a asp-controller="Transaccion" asp-action="Create" class="btn btn-success" style="font-family:Candara">Nueva Transacción</a> <!-- Creamos el botón que nos permite crear Items - asignar path -->
            </div>
        </div>
        <br />

        @if (Model.Count() > 0)
        {
            <!-- Títulos de la tabla -->
            <table border="1" bgcolor="white" class="table table-bordered table-striped border-primary" style="width: 100%">
                <thead>
                    <tr>
                        <th>
                            <h6 align="center" style="font-family:Cambria"> <b>Nombre</b> </h6>
                        </th>
                        <th>
                            <h6 align="center" style="font-family:Cambria"> <b>Apellido</b> </h6>
                        </th>
                        <th>
                            <h6 align="center"style="font-family:Cambria"> <b>Ciudad</b> </h6>
                        </th>
                        <th>
                            <h6 align="center"style="font-family:Cambria"> <b>Dirección</b> </h6>
                        </th>
                        <th>
                            <h6 align="center"style="font-family:Cambria"> <b>Cédula</b> </h6>
                        </th>
                        <th>
                            <h6 align="center"style="font-family:Cambria"> <b>Fecha y Hora</b> </h6>
                        </th>
                        <th>
                            <h6 align="center"style="font-family:Cambria"> <b>Valor ($)</b> </h6>
                        </th>
                        <th>
                            <h6 align="center"style="font-family:Cambria"> <b>Tipo de Transacción</b> </h6>
                        </th>
                        <th>
                            <h6 align="center"style="font-family:Cambria"> <b>Cambios</b> </h6>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Crear una nueva fila en la tabla -->
                    @foreach (var transaccion in Model)
                    {
                        <tr>
                            <td width="25%" style="font-family:Cambria">@transaccion.Nombre</td>
                            <td width="25%" style="font-family:Cambria">@transaccion.Apellido</td>
                            <td width="25%" style="font-family:Cambria">@transaccion.Ciudad</td>
                            <td width="25%" style="font-family:Cambria">@transaccion.Direccion</td>
                            <td width="25%" style="font-family:Cambria">@transaccion.Cedula</td>
                            <td width="30%" style="font-family:Cambria">@transaccion.Fecha</td>
                            <td width="25%" style="font-family:Cambria">@transaccion.Valor</td>
                            <td width="25%" style="font-family:Cambria">@transaccion.Tipo</td>
                            <td width="25%">
                                <!-- Agregar botones para actualizar o eliminar los datos-->
                                <div class="w-100 btn-group" role="group">
                                    <a asp-controller="Transaccion" asp-action="Update" asp-route-Id="@transaccion.Id" class="btn btn-primary mx-1" style="font-family:Candara">Editar</a>
                                    <a asp-controller="Transaccion" asp-action="Delete" asp-route-Id="@transaccion.Id" class="btn btn-danger mx-1" style="font-family:Candara">Eliminar</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p style="font-family:Cambria; color:white">No ha realizado ninguna transacción</p>
        }
    </div>
</body>

